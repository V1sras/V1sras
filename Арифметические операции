#include <iostream>

int main() {
    
    int a, b, c, d, e, f;
    
    a = -10; // Унарная операция '-', обозначает знак числа
    std::cout << a << "\n";
    
    c = +10; // Унарная операция '+', обозначает знак числа
    std::cout << c << "\n";
    
    b = a + 10; // Бинарная операция '+', используется для вычисления выражения
    std::cout << b << "\n";
    
    e = c - 10; // Бинарная операция '-', используется для вычисления выражения
    std::cout << b << "\n";
    
    f = -5 % -3; // Взятие остатка от деления
    std::cout << f << "\n";
    
    d = 8 / 3; // Бинарная операция '/', d = 2
    std::cout << d << "\n";
    
    float x = 8.0 / 3; // Бинарная операция '/', x = 2.666667
    std::cout << x << "\n";
    
    return 0;
}
